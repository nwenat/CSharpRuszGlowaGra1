<Window x:Class="SavePeopleGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SavePeopleGame"
        mc:Ignorable="d"
        Title="SavePeople" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition />
            <RowDefinition Height="160"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition />
            <ColumnDefinition Width="160"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="startButton" Content="Start!" HorizontalAlignment="Left" Margin="80,80,0,0" Grid.Row="2" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Center" Grid.Row="2" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Center"/>
        <ProgressBar Grid.Column="1" HorizontalAlignment="Left" Height="10" Margin="90,90,0,0" Grid.Row="2" VerticalAlignment="Top" Width="100"/>
        <ContentControl Content="ContentControl" Grid.Column="2" HorizontalAlignment="Center" Margin="0,120,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Canvas Grid.Column="1" Grid.Row="1"/>



    </Grid>

</Window>
